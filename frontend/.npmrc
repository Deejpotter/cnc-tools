# .npmrc for CNC Tools frontend
# Updated: 25/05/2025
# Author: Deej Potter

# Fix peer dependency issues
legacy-peer-deps=true
engine-strict=false

# Ensure deterministic builds
save-exact=true

# Increase network timeout for slow connections
network-timeout=60000

# Use strict SSL to prevent connection issues
strict-ssl=true

# Prefer offline mode to use cache if possible
prefer-offline=true

# Add Netlify-specific configuration
@netlify:registry=https://registry.npmjs.org/
