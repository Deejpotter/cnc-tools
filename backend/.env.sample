# Environment Configuration
# Updated: 25/05/25
# Make a copy of this file named .env and fill in your own values

# API Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-frontend.netlify.app

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/cnc-tools
MONGODB_DB_NAME=cnc-tools

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
