{
  "name": "@cnc-tools/backend",
  "version": "1.0.0",
  "description": "Backend service for CNC Tools application. Provides REST APIs for CNC machine information and calculations.",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node src/app.ts",
    "dev:win": "nodemon --exec ts-node .\\src\\app.ts",
    "dev:debug": "nodemon --inspect --exec ts-node src/app.ts",
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "build:watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "cnc",
    "express",
    "typescript",
    "api",
    "rest"
  ],
  "author": "Deej Potter <deejpotter@gmail.com>",
  "license": "ISC",
  "repository": "git@github.com:Deejpotter/cnc-technical-ai.git",
  "dependencies": {
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "mongodb": "^6.15.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "express-rate-limit": "^7.5.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}