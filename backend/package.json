{
  "name": "cnc-technical-ai",
  "version": "1.0.0",
  "description": "A chatbot that provides detailed technical information about CNC machines and related products. Built with Express.js, TypeScript, and OpenAI's GPT-3.",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node src/app.ts",
    "dev:win": "nodemon --exec ts-node .\\src\\app.ts",
    "dev:debug": "nodemon --inspect --exec ts-node src/app.ts",
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "build:watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "Deej Potter <deejpotter@gmail.com>",
  "license": "ISC",
  "repository": "git@github.com:Deejpotter/cnc-technical-ai.git",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "mongodb": "^6.15.0",
    "openai": "^4.103.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}