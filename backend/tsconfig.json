{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@types/*": [
        "../types/*"
      ]
    },
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/**/*",
    "../types/mongo/chat.ts",
    "../types/mongodb.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "python_code",
    "sample code"
  ]
}