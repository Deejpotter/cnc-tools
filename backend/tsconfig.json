{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "..",
    "paths": {
      "@/*": [
        "backend/src/*"
      ]
    },
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/**/*",
    "../types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "python_code",
    "sample code",
    "examples/data/*",
    "examples/*"
  ]
}