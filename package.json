{
  "name": "cnc-tools-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for CNC Tools application containing both frontend and backend projects",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start": "concurrently \"yarn start:backend\" \"yarn start:frontend\"",
    "start:backend": "yarn workspace @cnc-tools/backend start",
    "start:frontend": "yarn workspace @cnc-tools/frontend dev",
    "dev": "concurrently \"yarn dev:backend\" \"yarn dev:frontend\"",
    "dev:backend": "yarn workspace @cnc-tools/backend dev:win",
    "dev:frontend": "yarn workspace @cnc-tools/frontend dev",
    "build": "yarn build:backend && yarn build:frontend",
    "build:backend": "yarn workspace @cnc-tools/backend build",
    "build:frontend": "yarn workspace @cnc-tools/frontend build",
    "test": "yarn test:backend && yarn test:frontend",
    "test:backend": "yarn workspace @cnc-tools/backend test",
    "test:frontend": "yarn workspace @cnc-tools/frontend test",
    "clean": "rimraf frontend/node_modules backend/node_modules node_modules",
    "reset": "yarn clean && yarn install:all",
    "install:all": "yarn install && yarn workspace @cnc-tools/frontend install && yarn workspace @cnc-tools/backend install",
    "update:deps": "yarn upgrade-interactive --latest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "yarn workspaces run tsc --noEmit",
    "predev": "yarn install:all"
  },
  "keywords": [
    "cnc",
    "tools",
    "maker",
    "nextjs",
    "express",
    "typescript"
  ],
  "author": "Deej Potter <deejpotter@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.49.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  },
  "resolutions": {
    "typescript": "^5.2.2",
    "eslint": "^8.49.0"
  },
  "dependencies": {
    "@popperjs/core": "2.11.8",
    "prop-types": "15.7.2",
    "zod": "3.23.8"
  }
}